{
   "compilerOptions": {
      // "composite": true,
      "target": "ESNext",
      "useDefineForClassFields": true,
 
      "module": "ESNext",
      "skipLibCheck": true,
      /* Bundler mode */
      "moduleResolution": "bundler",
      "allowImportingTsExtensions": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "jsxImportSource": "demo",
      /* Linting */
      "strict": true,
   },
   "include": [
      "src/mg/**/*"
   ]
}